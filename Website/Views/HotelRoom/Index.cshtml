@{
}
@model List< HotelBookingDay66Api.Dto.HotelRoomDto>



<div class="row">
    <div class="col-md-12"><h5 class="bg-black text-warning p-3">API Test - All Rooms List</h5></div>
    <div class="col-md-12">
        <table class="table table-bordered">
            <tr class="bg-warning">
        <td>Id</td>
        <td>Room Type</td>
        <td>Room Rent</td>
        <td colspan="2">Operations</td>
    </tr>
    @foreach(var rooms in Model)
    {
        <tr>
            <td>@rooms.RoomId</td>
            <td>@rooms.RoomType</td>
            <td>@rooms.RoomRent</td>
            <td><a class="btn btn-info" asp-action="Edit" asp-route-id="@rooms.RoomId">Edit</a> </td>
            <td><a class="btn btn-danger" asp-action="Delete" asp-route-id="@rooms.RoomId">Delete</a> </td>
        </tr>
      }
        </table>
    </div>
</div>
